<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.katrina.ui.MainUI">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="5"
        android:rowCount="3"
        android:id="@+id/grid1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:id="@+id/layoutContacts"
            android:clickable="true"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/view_contacts_ui"
                android:id="@+id/contact1" />

            <include
                layout="@layout/view_contacts_ui"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact2" />

            <include
                layout="@layout/view_contacts_ui"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact3" />

            <include
                layout="@layout/view_contacts_ui"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact4" />

            <include
                layout="@layout/view_contacts_ui"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact5" />

        </LinearLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/moduleGridView"
            android:layout_row="1"
            android:layout_columnSpan="5"
            android:layout_column="0"
            android:choiceMode="singleChoice"
            android:numColumns="3"
            android:clickable="true"
            android:scrollingCache="false"
            android:stackFromBottom="false"
            android:layout_columnWeight="2"
            android:layout_rowWeight="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apps"
            android:id="@+id/apps"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="left|bottom"
            android:enabled="true"
            android:nestedScrollingEnabled="false"
            android:onClick="onButtonClick"
            android:clickable="true"
            android:layout_rowWeight="3"
            android:layout_columnWeight="1" />

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/space1"
            android:layout_columnWeight="2"
            android:layout_rowWeight="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency"
            android:id="@+id/emergency"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="fill_horizontal|bottom|center_horizontal"
            android:enabled="true"
            android:nestedScrollingEnabled="false"
            android:onClick="onButtonClick"
            android:clickable="true"
            android:layout_columnWeight="3"
            android:layout_rowWeight="3" />

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_column="3"
            android:layout_row="2"
            android:id="@+id/space2"
            android:layout_columnWeight="4"
            android:layout_rowWeight="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/settings"
            android:layout_column="4"
            android:layout_row="2"
            android:layout_gravity="bottom"
            android:enabled="true"
            android:onClick="onButtonClick"
            android:clickable="true"
            android:layout_columnWeight="5"
            android:layout_rowWeight="3" />

    </GridLayout>

</RelativeLayout>
